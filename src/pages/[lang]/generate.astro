---
import GenerateLayout from '@/layouts/GenerateLayout.astro';
import { getLocaleFromLang } from '@/utils/getLocale';
import "@/styles/globals.css";
// import ClientSidebar from '@/components/react/client-sidebar';
import AppSidebar from '@/components/react/templates/app-sidebar';

export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "id" } },
  ];
}
const { lang } = Astro.params;
const locale = await getLocaleFromLang(lang);
---

<GenerateLayout lang={lang} locale={locale}>
    <AppSidebar client:only="react"/>
</GenerateLayout>