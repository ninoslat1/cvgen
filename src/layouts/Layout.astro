---
import Header from "@/components/react/header"
import { ModeToggle } from "@/components/react/mode-toggler"
import { ClientRouter } from "astro:transitions"
import { fade } from 'astro:transitions';
const {lang, locale} = Astro.props
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ClientRouter/>
		<title>CVGen</title>
	</head>
	<div class="flex justify-center sticky top-0 z-50 w-full border-b bg-white/95 dark:bg-slate-900/95 backdrop-blur light:supports-[backdrop-filter]:bg-white/60 h-12 items-center">
		<div class="flex items-center justify-between w-full h-full px-4" transition:animate={fade({ duration: '0.5s'})}>
			<ModeToggle client:only="react" />
			<div class="justify-center mx-auto">
				<Header client:only="react" lang={lang} locale={locale}/>
			</div>
		</div>
	</div>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
