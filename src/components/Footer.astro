---
const currentYear = new Date().getFullYear();
import { FileText, Mail } from "lucide-react"
const {locale} = Astro.props
---

<footer class="bg-gray-900 text-white py-12 font-manrope">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8">
      <div class="col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="flex items-center justify-center w-8 h-8 bg-blue-600 rounded-lg">
            <FileText className="w-5 h-5 text-white" />
          </div>
          <span class="text-xl font-bold">CVGen</span>
        </div>
        <p class="text-gray-400 mb-4 max-w-md">
          {locale.Slogan}
        </p>
        <div class="flex space-x-4">
          <Mail className="w-5 h-5 text-gray-400 hover:text-white cursor-pointer transition-colors" />
        </div>
      </div>

      <div>
        <h3 class="font-semibold mb-4">{locale.FooterSection1}</h3>
        <ul class="space-y-2 text-gray-400">
          <li><a href="#" class="hover:text-white transition-colors">{locale.FooterSection1Content1}</a></li>
          <li><a href="#features" class="hover:text-white transition-colors">{locale.FooterSection1Content2}</a></li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold mb-4">{locale.FooterSection2}</h3>
        <ul class="space-y-2 text-gray-400">
          <li><a href="#" class="hover:text-white transition-colors">{locale.FooterSection2Content1}</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {currentYear} CVGen. All rights reserved. Built with privacy in mind.</p>
    </div>
  </div>
</footer>
