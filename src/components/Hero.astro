---
import { Button } from "@/components/ui/button"
import { FileText, Shield, Zap } from "lucide-react"
const {locale} = Astro.props
---

    <section class="relative py-20 lg:py-32">
      <div class="container mx-auto px-4">
        <div class="text-center max-w-4xl mx-auto">
          <div class="flex items-center justify-center mb-6 motion-safe:animate-fade-slide-down">
            <div class="flex items-center justify-center w-16 h-16 bg-blue-600 rounded-2xl shadow-lg">
              <FileText className="w-8 h-8 text-white" />
            </div>
          </div>

          <h1 class="text-4xl font-bold text-gray-900 mb-6 leading-tight font-bound dark:text-white motion-safe:animate-fade-slide-down">
            CVGen
            <span class="font-manrope py-5 block text-2xl text-blue-600 motion-safe:animate-appear">{locale.Motto}</span>
          </h1>

          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed dark:text-white font-manrope motion-safe:animate-appear">
            {locale.Slogan}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12 motion-safe:animate-appear">
            <Button size="lg">
              <a href="/generate">
                {locale.Create}
              </a>
            </Button>
            <Button size="lg" variant="outline" className="bg-transparent">
              {locale.Example}
            </Button>
          </div>

          <div class="flex flex-wrap justify-center gap-8 text-sm text-gray-500 motion-safe:animate-fade-slide-up">
            <div class="flex items-center gap-2">
              <Zap className="w-4 h-4 text-green-500" />
              <span class="dark:text-white">{locale.Feature1}</span>
            </div>
            <div class="flex items-center gap-2">
              <Shield className="w-4 h-4 text-blue-500" />
              <span class="dark:text-white">{locale.Feature2}</span>
            </div>
            <div class="flex items-center gap-2">
              <FileText className="w-4 h-4 text-purple-500" />
              <span class="dark:text-white">{locale.Feature3}</span>
            </div>
          </div>
        </div>
      </div>
    </section>
