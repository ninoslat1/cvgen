---
import Marquee from "@/components/ui/marquee"
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card"
import { Shield, Database, Zap, Lock, Download, Palette } from "lucide-react"
const {locale} = Astro.props
const features = [
    {
      icon: Zap,
      title: `${locale.FeatureCard1Tag}`,
      description: `${locale.FeatureCard1}`,
      color: "text-green-500",
    },
    {
      icon: Shield,
      title: `${locale.FeatureCard2Tag}`,
      description: `${locale.FeatureCard2}`,
      color: "text-blue-500",
    },
    {
      icon: Database,
      title: `${locale.FeatureCard3Tag}`,
      description: `${locale.FeatureCard3}`,
      color: "text-purple-500",
    },
    {
      icon: Download,
      title: `${locale.FeatureCard5Tag}`,
      description: `${locale.FeatureCard5}`,
      color: "text-orange-500",
    },
    {
      icon: Palette,
      title: `${locale.FeatureCard6Tag}`,
      description: `${locale.FeatureCard6}`,
      color: "text-indigo-500",
    },
  ]
---
    <section id="features" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 font-bound">{locale.Reason}</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto font-manrope">
            {locale.Slogan2}
          </p>
        </div>

        <div class="relative">
          <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-gray-50 to-transparent z-10" />
          <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-gray-50 to-transparent z-10" />

          <Marquee className="[--duration:35s]">
            {features.map((feature, index) => (
              <Card
                key={index}
                className="w-80 mx-4 border-0 shadow-lg hover:shadow-xl transition-shadow duration-300 dark:bg-slate-900 flex-shrink-0"
              >
                <CardHeader>
                  <div class="w-12 h-12 rounded-lg bg-gray-100 flex items-center justify-center mb-4 dark:white">
                    <feature.icon className={`w-6 h-6 ${feature.color}`} />
                  </div>
                  <CardTitle className="text-xl font-semibold text-gray-900 dark:text-white font-bound">
                    {feature.title}
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <CardDescription className="text-gray-600 leading-relaxed dark:text-gray-300 font-manrope">
                    {feature.description}
                  </CardDescription>
                </CardContent>
              </Card>
            ))}
          </Marquee>
        </div>
      </div>
    </section>
