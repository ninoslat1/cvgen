---
import { Button } from "@/components/ui/button"
import { Card, CardContent } from "@/components/ui/card"
import { Shield, Zap, Heart } from "lucide-react"
const {locale} = Astro.props
---
<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <Card className="max-w-4xl mx-auto border-0 shadow-2xl dark:bg-white">
      <CardContent className="p-12 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6 font-bound">{locale.CTAHeader}</h2>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto font-manrope dark:text-gray-500">
          {locale.CTAHeaderSlogan}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <Button size="lg">
            <a href="/generate">
                {locale.CTACreate}
            </a>
          </Button>
          <Button size="lg" variant="outline" className="dark:text-white dark:bg-slate-900 hover:dark:text-white hover:dark:bg-slate-900">
            {locale.CTAExample}
          </Button>
        </div>

        <div class="flex flex-wrap justify-center gap-8 text-sm text-gray-500 font-manrope">
          <div class="flex items-center gap-2">
            <Zap className="w-4 h-4 text-green-500" />
            <span>{locale.CTAFeature1}</span>
          </div>
          <div class="flex items-center gap-2">
            <Shield className="w-4 h-4 text-blue-500" />
            <span>{locale.CTAFeature2}</span>
          </div>
          <div class="flex items-center gap-2">
            <Heart className="w-4 h-4 text-red-500" />
            <span>{locale.CTAFeature3}</span>
          </div>
        </div>
      </CardContent>
    </Card>
  </div>
</section>

